#include<iostream>
#include<string>
using namespace std;

class Player
{
	private:
	string name;
	string email;
	bool status;
	int kills;
	int pin;
	Player* target;
	Player* killer;
	Player* self = this;
	public:
	Player(string name,string email,bool status, int kills, int pin);
	void addAssassins(Player* killer, Player* target);
	void kill(int pin, Player* killer, Player* target);	
	void die(int pin, Player* killer);
	
	
};

Player::Player(string name,string email,bool status, int kills, int pin)
{
	name = name;
	email = email;
	status = status;
	kills = kills;
	pin = pin;
}

void Player::addAssassins(Player* killer, Player* target)
{
	target = target;
	killer = killer;
}

void Player::kill(int pin, Player* killer, Player* target)
{
	if(status)
	{
		(*target).die(pin, killer);
		cout<<"Checking kill"<<endl;
	}
}

Player* Player::die(int playerpin, Player* actingkiller)
{
	if(pin == playerpin && killer==actingkiller )
	{
		status = false;
		return target;
		cout << "Player Killed" << endl;
	}

	else
		cout <<"error invalid kill" << endl;
}

int main()
{
	Player p1("Calvin","tacalvin@yahoo.com",true,0,1);
	Player p2("Bill","tacalvin@yahoo.com",true,0,2);

	p1.addAssassins(nullptr, p2);
	p1.addAssassins(p1, nullptr);
	
	return 0;
}
